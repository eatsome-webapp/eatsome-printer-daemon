{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Eatsome Printer Service",
  "version": "1.0.0",
  "identifier": "com.eatsome.printer-service",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Eatsome Printer Service",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright Â© 2024 Eatsome B.V.",
    "category": "Utility",
    "shortDescription": "Thermal printer daemon for restaurant POS",
    "longDescription": "Background service that manages thermal printer connections and print job queuing for Eatsome restaurant POS system",
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "wix": {
        "language": "en-US"
      }
    },
    "linux": {
      "deb": {
        "depends": ["libc6", "libusb-1.0-0"],
        "files": {
          "/etc/udev/rules.d/60-eatsome-printer.rules": "udev-rules.conf"
        }
      },
      "rpm": {
        "depends": ["glibc", "libusb1"],
        "files": {
          "/etc/udev/rules.d/60-eatsome-printer.rules": "udev-rules.conf"
        }
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/eatsome/eatsome/releases/latest/download/latest.json"],
      "dialog": false,
      "pubkey": "PLACEHOLDER_WILL_BE_GENERATED",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
